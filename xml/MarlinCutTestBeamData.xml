<!-- Example steering file for MarlinSDHCALArbor -->
<marlin>
<execute>
  <processor name="MyCutProcessor"/> 
  <processor name="MyLCIOOutputProcessor"/> 

</execute>

<!--   /home/remi/ilcsoft/SDHCAL/data/simulation/pi-/single_calorimeterhit_pi-_20GeV_new.slcio
  /home/remi/ilcsoft/SDHCAL/MokkaILD/output/Marlin/mokkaILD_REC.slcio
  /home/remi/ilcsoft/SDHCAL/joli.slcio
  /home/remi/ilcsoft/SDHCAL/data/ILD_02_v05/uds500_00.stdhep_digitized.slcio -->

<global>
  <parameter name="LCIOInputFiles">
  /home/remi/ilcsoft/SDHCAL/data/testBeam/2012/TDHCAL_715693.slcio
  </parameter>
  <parameter name="GearXMLFile" value="/home/remi/git/ArborPFA/xml/SDHCALGearFile.xml"/>
  <parameter name="MaxRecordNumber" value="0"/>
  <parameter name="SkipNEvents" value="0"/>
  <parameter name="SupressCheck" value="false"/>
  <parameter name="Verbosity" options="DEBUG0-4,MESSAGE0-4,WARNING0-4,ERROR0-4,SILENT"> MESSAGE </parameter>
  <parameter name="RandomSeed" value="1234567890" />
</global>


  <processor name="MyCutProcessor" type="CutProcessor">
    
    <!--Name of the SDHCAL hit collection-->
    <parameter name="SDHCALCollectionName" type="string"> SDHCAL_HIT </parameter>
    <!--Default decoder-->
    <parameter name="decoderString" type="string"> "M:3,S-1:3,I:9,J:9,K-1:6" </parameter>
    <!--IJK encoding for calorimeter hit creation-->
    <parameter name="IJKEncoding" type="StringVec"> I J K-1 </parameter>
    <!-- cut on total number of hits -->
    <parameter name="totalNbOfHitsCut" type="int"> 100 </parameter>
    <!-- cut on NHit/nbOfTouchedLayers -->
    <parameter name="NHitOverNLayerCut" type="double"> 3 </parameter>
    <!-- cut on radius/cogz -->
    <parameter name="radiusOverCog2Cut" type="double"> 0.4 </parameter>
    <!-- cut on shower starting layer -->
    <parameter name="showerStartingLayerCut" type="int"> 0 </parameter>
    <!-- cut on the number of touched layers -->
    <parameter name="nbOfTouchedLayersCut" type="int"> 20 </parameter>
    <!-- cut on (fractalDim * hitsInCentralCells) / (ln(NHit) * NHit) -->
    <parameter name="fractalTimesCentralCellsCut" type="double"> 0.0 </parameter>
    <!-- cut on the number of holes after the shower starting point -->
    <parameter name="nbOfHolesCut" type="int"> 0 </parameter>
    <!-- cut on the percentage of hits in the edges -->
    <parameter name="NHitEdgePercentCut" type="double"> 0.5 </parameter>
    
  </processor>



 <processor name="MyLCIOOutputProcessor" type="LCIOOutputProcessor">
  <!--   standard output: full reconstruction keep all collections -->
  <parameter name="LCIOOutputFile" type="string" >
  /home/remi/ilcsoft/SDHCAL/data/testBeam/2012/TDHCAL_715693_cut.slcio
  </parameter>
  <parameter name="LCIOWriteMode" type="string" value="WRITE_NEW"/>
  <!--parameter name="SplitFileSizekB" type="int" value="1992294"/-->
 </processor>

</marlin>
